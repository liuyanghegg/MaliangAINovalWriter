<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">
    
    <!-- 引入Spring Boot默认配置 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- 定义日志文件的存储路径和应用名称 -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="ainovel-server"/>
    <property name="LOG_HOME" value="${LOG_HOME:-./logs}"/>
    <property name="LOG_FILE" value="${LOG_HOME}/${APP_NAME}"/>
    
    <!-- 彩色日志配置 -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter"/>
    
    <!-- 日志输出格式定义 -->
    <!-- SkyWalking会自动通过Agent将TraceId注入到MDC的tid键中 -->
    <!-- 控制台日志格式（带颜色） -->
    <property name="CONSOLE_LOG_PATTERN" 
              value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(%5p) %clr([SW:%X{tid:-}]){magenta} %clr([U:%X{userId:-}]){cyan} %clr([R:%X{requestId:-}]){blue} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n%wEx"/>
    
    <!-- 文件日志格式（包含SkyWalking TraceId和自定义MDC） -->
    <!-- SW:TraceId = SkyWalking APM追踪ID（从Agent自动注入到MDC的tid键），不是业务层的traceId -->
    <property name="FILE_LOG_PATTERN" 
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [SW:%X{tid:-}] [U:%X{userId:-}] [R:%X{requestId:-}] [%15.15t] %-40.40logger{39} : %m%n%wEx"/>
    
    <!-- JSON格式日志（用于日志采集系统） -->
    <property name="JSON_LOG_PATTERN" 
              value='{"timestamp":"%d{yyyy-MM-dd HH:mm:ss.SSS}","level":"%level","sw_traceId":"%X{tid:-}","userId":"%X{userId:-}","requestId":"%X{requestId:-}","thread":"%thread","logger":"%logger","message":"%message","exception":"%exception"}%n'/>
    
    <!-- ========================================== -->
    <!-- 控制台输出配置 (CONSOLE) -->
    <!-- ========================================== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 只输出INFO及以上级别的日志 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>
    
    <!-- ========================================== -->
    <!-- 所有日志文件输出配置 (FILE_ALL) -->
    <!-- ========================================== -->
    <appender name="FILE_ALL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 滚动策略：按时间和大小滚动 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 日志文件名格式 -->
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!-- 单个日志文件最大大小 -->
            <maxFileSize>100MB</maxFileSize>
            <!-- 日志文件保留天数 -->
            <maxHistory>30</maxHistory>
            <!-- 总日志文件大小限制 -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- ========================================== -->
    <!-- ERROR级别日志文件输出配置 (FILE_ERROR) -->
    <!-- ========================================== -->
    <appender name="FILE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}-error.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 只记录ERROR级别日志 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}-error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- ========================================== -->
    <!-- WARN级别日志文件输出配置 (FILE_WARN) -->
    <!-- ========================================== -->
    <appender name="FILE_WARN" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}-warn.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 只记录WARN级别日志 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}-warn.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- ========================================== -->
    <!-- INFO级别日志文件输出配置 (FILE_INFO) -->
    <!-- ========================================== -->
    <appender name="FILE_INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}-info.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 只记录INFO级别日志 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}-info.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- ========================================== -->
    <!-- DEBUG级别日志文件输出配置 (FILE_DEBUG) -->
    <!-- ========================================== -->
    <appender name="FILE_DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}-debug.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 只记录DEBUG级别日志 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}-debug.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- ========================================== -->
    <!-- SkyWalking专用日志文件输出 (FILE_SKYWALKING) -->
    <!-- 记录所有包含TraceId的日志，便于链路追踪分析 -->
    <!-- ========================================== -->
    <appender name="FILE_SKYWALKING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}-skywalking.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}-skywalking.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>200MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- ========================================== -->
    <!-- JSON格式日志输出（用于日志采集系统如ELK） -->
    <!-- ========================================== -->
    <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}-json.log</file>
        <encoder>
            <pattern>${JSON_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}-json.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>200MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- ========================================== -->
    <!-- 异步日志配置 -->
    <!-- 提高日志输出性能，避免阻塞业务线程 -->
    <!-- ========================================== -->
    <appender name="ASYNC_FILE_ALL" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>1024</queueSize>
        <neverBlock>false</neverBlock>
        <appender-ref ref="FILE_ALL"/>
    </appender>
    
    <appender name="ASYNC_FILE_ERROR" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>512</queueSize>
        <neverBlock>false</neverBlock>
        <appender-ref ref="FILE_ERROR"/>
    </appender>
    
    <appender name="ASYNC_FILE_WARN" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>512</queueSize>
        <neverBlock>false</neverBlock>
        <appender-ref ref="FILE_WARN"/>
    </appender>
    
    <appender name="ASYNC_FILE_INFO" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>1024</queueSize>
        <neverBlock>false</neverBlock>
        <appender-ref ref="FILE_INFO"/>
    </appender>
    
    <appender name="ASYNC_FILE_SKYWALKING" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>2048</queueSize>
        <neverBlock>false</neverBlock>
        <appender-ref ref="FILE_SKYWALKING"/>
    </appender>
    
    <appender name="ASYNC_FILE_JSON" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>2048</queueSize>
        <neverBlock>false</neverBlock>
        <appender-ref ref="FILE_JSON"/>
    </appender>
    
    <!-- ========================================== -->
    <!-- 特定包的日志级别配置 -->
    <!-- ========================================== -->
    
    <!-- 应用核心包 -->
    <logger name="com.ainovel.server" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE_ALL"/>
        <appender-ref ref="ASYNC_FILE_ERROR"/>
        <appender-ref ref="ASYNC_FILE_WARN"/>
        <appender-ref ref="ASYNC_FILE_INFO"/>
        <appender-ref ref="ASYNC_FILE_SKYWALKING"/>
        <appender-ref ref="ASYNC_FILE_JSON"/>
    </logger>
    
    <!-- Spring Framework -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.data.mongodb" level="INFO"/>
    <logger name="org.springframework.security" level="INFO"/>
    
    <!-- Reactor Netty -->
    <logger name="reactor.netty" level="INFO"/>
    <logger name="io.netty" level="INFO"/>
    
    <!-- MongoDB -->
    <logger name="org.mongodb.driver" level="INFO"/>
    
    <!-- SkyWalking -->
    <logger name="org.apache.skywalking" level="INFO"/>
    
    <!-- RabbitMQ -->
    <logger name="org.springframework.amqp" level="INFO"/>
    <logger name="com.rabbitmq" level="INFO"/>
    
    <!-- LangChain4j -->
    <logger name="dev.langchain4j" level="INFO"/>
    
    <!-- 第三方库 -->
    <logger name="com.aliyun" level="WARN"/>
    <logger name="com.google" level="WARN"/>
    
    <!-- ========================================== -->
    <!-- 开发环境配置 -->
    <!-- ========================================== -->
    <springProfile name="dev,open-dev,test">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE_ALL"/>
            <appender-ref ref="ASYNC_FILE_ERROR"/>
            <appender-ref ref="ASYNC_FILE_WARN"/>
            <appender-ref ref="FILE_DEBUG"/>
            <appender-ref ref="ASYNC_FILE_SKYWALKING"/>
        </root>
    </springProfile>
    
    <!-- ========================================== -->
    <!-- 生产环境配置 -->
    <!-- ========================================== -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE_ALL"/>
            <appender-ref ref="ASYNC_FILE_ERROR"/>
            <appender-ref ref="ASYNC_FILE_WARN"/>
            <appender-ref ref="ASYNC_FILE_INFO"/>
            <appender-ref ref="ASYNC_FILE_SKYWALKING"/>
            <appender-ref ref="ASYNC_FILE_JSON"/>
        </root>
    </springProfile>
    
    <!-- ========================================== -->
    <!-- 性能测试环境配置 -->
    <!-- ========================================== -->
    <springProfile name="performance-test,performance-test-improved">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE_ALL"/>
            <appender-ref ref="ASYNC_FILE_ERROR"/>
            <appender-ref ref="ASYNC_FILE_SKYWALKING"/>
        </root>
    </springProfile>
    
    <!-- ========================================== -->
    <!-- 默认配置（兜底） -->
    <!-- ========================================== -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE_ALL"/>
        <appender-ref ref="ASYNC_FILE_ERROR"/>
        <appender-ref ref="ASYNC_FILE_WARN"/>
        <appender-ref ref="ASYNC_FILE_SKYWALKING"/>
    </root>
    
</configuration>


